<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:chainUseRtl="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/about_us_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/app_logo"
                    android:contentDescription="@null" />

                <com.smartit.talabia.components.TalabiaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="@string/lorem_ipsum_is_simply_dummy_text"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/contact"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp" />

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="AI- Ghunaim Tower 5th Floor, AI- Qibla Area Abu,"
                android:textSize="@dimen/_12ssp" />

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Baker AI-Sadique Street Kuwait City"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="+01 2345 6789"
                android:textSize="@dimen/_12ssp" />

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="info@talabia.com"
                android:textSize="@dimen/_12ssp" />

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/working_day"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Mon - Fri, 08:00 - 17.00"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Weekend, 10:00 - 16.00"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="start"
                android:orientation="horizontal">

                <com.smartit.talabia.components.FontAwesomeIcon
                    android:id="@+id/icon_ifacebook"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/gray_rounded_background"
                    android:gravity="center"
                    android:text="@string/icon_facebook"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_18ssp" />

                <com.smartit.talabia.components.FontAwesomeIcon
                    android:id="@+id/icon_twitter"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/gray_rounded_background"
                    android:gravity="center"
                    android:text="@string/icon_twitter"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_18ssp" />

                <com.smartit.talabia.components.FontAwesomeIcon
                    android:id="@+id/icon_google_plus"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/gray_rounded_background"
                    android:gravity="center"
                    android:text="@string/icon_google_plus"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_18ssp" />

                <com.smartit.talabia.components.FontAwesomeIcon
                    android:id="@+id/icon_instagram"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/gray_rounded_background"
                    android:gravity="center"
                    android:text="@string/icon_instagram"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>

            <com.smartit.talabia.components.TalabiaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_background"
                android:padding="@dimen/_7sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/informations"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp" />

            <com.smartit.talabia.components.TalabiaTextView
                android:id="@+id/tv_ask_question"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/ask_a_question"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray_color" />

            <com.smartit.talabia.components.TalabiaTextView
                android:id="@+id/tv_terms_conditions"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/terms_and_conditions"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray_color" />

            <com.smartit.talabia.components.TalabiaTextView
                android:id="@+id/tv_terms_faq"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/faq"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray_color" />

            <com.smartit.talabia.components.TalabiaTextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/service"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>