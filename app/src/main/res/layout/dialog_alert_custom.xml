<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DialogNLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/_55sdp">

        <com.smartit.talabia.components.FontAwesomeIcon
            android:id="@+id/titleIcon"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_40sdp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:divider="@android:color/black"
        android:dividerPadding="@dimen/_10sdp"
        android:minHeight="@dimen/_100sdp"
        android:showDividers="beginning">

        <TextView
            android:id="@+id/txt_alert_message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/reallyExit"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal" />
    </TableRow>

    <LinearLayout
        android:id="@+id/pop_up_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/dialog_alert_footer" />
    </LinearLayout>

</LinearLayout>